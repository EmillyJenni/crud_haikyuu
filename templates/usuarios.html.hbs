<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <title>{{ title }}</title>
</head>
<body>
    <h1>{{ title }}</h1>
    <nav>
        <ul>
            <li><a href="/">Início</a></li>
            <li><a href="/favorite-songs">Músicas Favoritas</a></li>
        </ul>
    </nav>
    <h2>Usuários Cadastrados</h2>
    {{#if usuarios}}
        <table border="1">
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>CPF</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Login</th>
                <th>Ações</th>
            </tr>
            {{#each usuarios}}
            <tr>
                <td>{{ this.id }}</td>
                <td>{{ this.nome }}</td>
                <td>{{ this.sobrenome }}</td>
                <td>{{ this.cpf }}</td>
                <td>{{ this.email }}</td>
                <td>{{ this.telefone }}</td>
                <td>{{ this.login }}</td>
                <td>
                    <a href="/edit-user/{{ this.id }}">Editar</a> |
                    <a href="/delete-user/{{ this.id }}" onclick="return confirm('Tem certeza que deseja excluir?')">Excluir</a>
                </td>
            </tr>
            {{/each}}
        </table>
    {{else}}
        <p>Nenhum usuário cadastrado.</p>
    {{/if}}
</body>
</html>
